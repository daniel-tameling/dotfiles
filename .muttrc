bind index,pager g noop
macro index gi "<change-folder> =INBOX<enter>" "goto INBOX"
macro index gd "<change-folder> =[Gmail]/Drafts<enter>" "goto Drafts"
macro index gs "<change-folder> =[Gmail]/Sent<quote-char><space>Mail<enter>" "goto Sent Mail"
macro index gt "<change-folder> =[Gmail]/Trash<enter>" "goto Trash"
bind index,pager gg change-folder
bind index,pager G change-folder-readonly

macro index,pager \ex "!mbsync -a^M" "Update through mbsync"
bind index,pager x sync-mailbox
bind index,pager X sync-folder-mailbox


set move = no

set sendmail="/opt/local/bin/msmtp --read-envelope-from" # choose the SMTP server according to the from field
set edit_hdrs=yes
set signature=~/.mutt/signature
set user_agent=no # don't include user-agent info in outgoing messages
set from = "johndoe@gmail.com"
set realname = "Daniel Tameling"
set editor="emacs -Q -l ~/.emacs.d/init_files/init_mutt.el +8"

set alias_file=~/.mutt/alias
set sort_alias=address
set reverse_alias="yes"
source $alias_file

