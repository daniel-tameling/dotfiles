index 95cce331..8132f5aa 100644
--- a/init.c
+++ b/init.c
@@ -3715,6 +3715,9 @@ void mutt_init (int skip_sys_rc, LIST *commands)
   Editor = safe_strdup (p);
   Visual = safe_strdup (p);
 
+  if ((p = getenv ("MUTTSYNCCMD")) != NULL)
+    SyncCmd = safe_strdup (p);
+
   if ((p = getenv ("REPLYTO")) != NULL)
   {
     BUFFER token;
