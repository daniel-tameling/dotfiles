+void
+xdrawhistcounter(const char *str, int digits, int x)
+{
+        int i;
+        Glyph g = {' ', 0, histcountfg, histcountbg};
+        for (i = 0; i < strlen(str); i++) {
+                g.u = str[i];
+                xdrawglyph(g, x + i, 0);
+        }
+        return;
